<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_full"
    tools:context="com.sololaunches.www.wweguessthetheme.ScreenOne">


    <fragment
        android:id="@+id/topFragment"
        android:name="com.sololaunches.www.wweguessthetheme.FaceActivity"
        android:layout_width="wrap_content"
        android:layout_height="410dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        tools:layout="@layout/first_fragment_railways" />

    <EditText
        android:id="@+id/textView"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/check"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/rounded_corners_imagebutton"
        android:hint="Enter here"
        android:inputType="textFilter"
        android:paddingBottom="2dp"
        android:paddingTop="5dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_alignBottom="@+id/pause"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <ImageButton
        android:id="@+id/play"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_corners_imagebutton"
        app:srcCompat="@drawable/play"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/topFragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/pause"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_corners_imagebutton"
        app:srcCompat="@drawable/pause"
        android:layout_alignTop="@+id/play"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp" />

    <ImageButton
        android:id="@+id/check"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/rounded_corners_imagebutton"
        app:srcCompat="@drawable/check"
        android:layout_below="@+id/pause"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />

    <TextView
        android:id="@+id/congrats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nxt_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="28dp"
        android:layout_toEndOf="@+id/pause"
        android:text="Congratulations!!"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/nxt_btn"
        android:layout_width="120dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/next_btn"
        android:layout_below="@+id/topFragment"
        android:layout_alignLeft="@+id/seekBar"
        android:layout_alignStart="@+id/seekBar"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp" />


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="100dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/rate_us"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/share"
        android:layout_width="100dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/fb_share"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/check"
        android:layout_alignEnd="@+id/check" />


</RelativeLayout>
