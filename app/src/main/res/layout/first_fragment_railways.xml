<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_full">


    <ImageButton
        android:id="@+id/add_Coins"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/add_coins" />


    <ImageView
        android:id="@+id/super_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/unknown"
        android:layout_below="@+id/coin_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/level_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEVEL"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/hints"
        android:layout_alignEnd="@+id/hints"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp" />



    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/coin_small"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/coin_txt"
        android:layout_toStartOf="@+id/coin_txt"
        android:layout_alignBottom="@+id/level_txt" />

    <TextView
        android:id="@+id/coin_txt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="100"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/add_Coins"
        android:layout_toStartOf="@+id/add_Coins"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />


</RelativeLayout>